{
  "name": "@vplug/core",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "build": "pnpm run --filter=\"./{packages,internal}/*\" --parallel build",
    "clean": "rimraf --glob ./{packages,internal}/*/dist",
    "coverage": "vitest --coverage",
    "dev": "pnpm run --filter=\"./{packages,internal}/*\" --parallel dev",
    "lint": "eslint .",
    "prepare": "husky",
    "publish": "pnpm build && changeset publish",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@ntnyq/eslint-config": "^2.5.1",
    "@ntnyq/prettier-config": "^1.21.2",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.6.0",
    "husky": "^9.0.11",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0",
    "vue": "^3.4.31"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,vue,md,json,yml,yaml}": "eslint --fix"
  }
}
